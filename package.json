{
  "name": "vump",
  "private": true,
  "version": "0.0.1",
  "description": "🚴类Vue语法的微信小程序轻量级框架, 基于原生开发标准",
  "keywords": [
    "typescript",
    "charrue",
    "miniprogram",
    "vitest"
  ],
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build --filter=@charrue/vump",
    "lint": "eslint --fix",
    "prepare": "husky install",
    "test": "vitest"
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@charrue/eslint-config-base": "^0.1.3",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.6.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "vite": "^2.8.1",
    "vitest": "^0.3.2"
  }
}